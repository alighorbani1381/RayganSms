{
  "name": "trez/raygan-sms",
  "type": "library",
  "description": "A simple API extension for DateTime.",
  "keywords": [
    "date",
    "time",
    "DateTime"
  ],
  "support": {
    "issues": "https://github.com/briannesbitt/Carbon/issues",
    "source": "https://github.com/briannesbitt/Carbon"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Farhad Mirzapour",
      "email": "farhad.mirzapour@gmail.com",
      "homepage": "http://farhadnote.ir"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": ">=5.6.4",
    "guzzlehttp/guzzle": "^6.2",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.1.5"
  },
  "autoload": {
    "psr-4": {
      "Trez\\RayganSms": "src/"
    }
  },
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "scripts": {
    "test": [
      "@phpunit",
      "@phpcs"
    ],
    "phpunit": "phpunit --verbose --coverage-clover=coverage.xml",
    "phpcs": "php-cs-fixer fix -v --diff --dry-run",
    "phpstan": "phpstan analyse --configuration phpstan.neon --level 3 src tests",
    "phpdoc": "php phpdoc.php"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Trez\\RayganSms\\ServiceProvider"
      ]
    }
  }
}
